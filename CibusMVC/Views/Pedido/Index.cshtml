@model IEnumerable<CibusMVC.DetallePedido>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Detalles del pedido</h2>
@Html.AntiForgeryToken()

<section id="blog" class="padding-side-50">
    <div class="e-divider-8"></div>
    <div class="e-divider-4"></div>
    <div class="grid container-fluid e-text-center">
       
        
        <div id="posts" class="row popup-container">
            <table class="table">
    <tr>
        <td>Cliente</td>
        <td>Fecha</td>
        <td>Total</td>
    </tr>
            <tr>
                <td>@Html.DisplayFor(modelItem => Model.Cast<DetallePedido>().First().Pedido.IdCliente)</td>
                <td>@Html.DisplayFor(modelItem => Model.Cast<DetallePedido>().First().Pedido.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => Model.Cast<DetallePedido>().First().Pedido.Total)</td>
            </tr>
</table>

            <table class="table">
                <tr>
                    <th>Restaurante</th>
                    <th> Combo</th>
                    <th>Cantidad </th>
                    <th>Tamaño</th>
                    <th>Precio Unitario</th>
                    <th>Precio Total</th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComboRestaurante.Restaurante.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComboRestaurante.Nombre)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Size.Descripcion)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.ComboRestaurante.Precio)
                        </td>
                        <td>@(item.Cantidad * item.ComboRestaurante.Precio)</td>
                     
                    </tr>
                }

            </table>
            <h3> <button>Confirmar</button></h3>
        </div>
    </div>

</section>

